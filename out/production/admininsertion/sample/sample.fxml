<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <padding><Insets bottom="40" left="40" right="40" top="40" /></padding>
    <columnConstraints>
        <ColumnConstraints>
        </ColumnConstraints>
        <ColumnConstraints halignment="RIGHT" maxWidth="Infinity" minWidth="100.0" prefWidth="100.0">
        </ColumnConstraints>
      <ColumnConstraints hgrow="ALWAYS" maxWidth="Infinity" minWidth="200.0" prefWidth="200.0" />
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Exam Insertion By Jaffar" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowSpan="1">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Label>



    <!-- Add Name Label -->
    <Label prefHeight="17.0" prefWidth="58.0" text="Question" GridPane.columnIndex="1" GridPane.rowIndex="1">
    </Label>
    <!-- Add Name Text Field -->
    <TextField fx:id="Question" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="1" />


    <!-- Add Email Label -->
    <Label  text="Option 1 : " GridPane.columnIndex="1" GridPane.rowIndex="2">
    </Label>
    <!-- Add Email Text Field -->
    <TextField fx:id="option1" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="2" />



    <!-- Add Password Label -->
    <Label text="Option 2: " GridPane.columnIndex="1" GridPane.rowIndex="3">
    </Label>
    <!-- Add Password Field -->
    <TextField fx:id="option2" prefHeight="40" GridPane.columnIndex="2" GridPane.rowIndex="3" />


    <!-- Add Submit Button -->
    <Button fx:id="submitButton" defaultButton="true" onAction="#register" prefHeight="40" prefWidth="100" text="Submit" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.rowSpan="1">
        <GridPane.margin>
            <Insets bottom="20" left="0" right="0" top="20" />
        </GridPane.margin>
    </Button>
   <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" />
   <Label  text="Option 3: " GridPane.columnIndex="1" GridPane.rowIndex="4" />
