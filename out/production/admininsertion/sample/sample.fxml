   <Label  prefHeight="37.0" prefWidth="68.0" text="    Answer : " GridPane.columnIndex="1" GridPane.rowIndex="6" />
   <TextField fx:id="option3" prefHeight="55.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="4" />
   <TextField fx:id="option4" prefHeight="50.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="5" />
   <TextField fx:id="answer" prefHeight="58.0" prefWidth="200.0" GridPane.columnIndex="2" GridPane.rowIndex="6" />
